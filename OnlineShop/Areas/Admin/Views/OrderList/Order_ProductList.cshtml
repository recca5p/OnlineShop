@model List<OnlineShop.Models.OrderDetails>;

@{
    ViewData["Title"] = "Index";
}
<div class="row">
        <h2 class="text-info">Product List</h2>
</div>

<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PorductId</td>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
            </tr>
        }
    </table>
    <div class="text-right">
        <h3>Revenue : @Model.Sum(c=>c.ProductPrice).ToString("#,###") VND </h3>
    </div>
</div>
<div class="form-group">
    <a asp-action="Index" asp-controller="OrderList" class="btn btn-success">Back to List</a>
</div>
  
